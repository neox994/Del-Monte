<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTaskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textStyle="italic"
        android:layout_toRightOf="@+id/tvTaskPriority" />

    <TextView
        android:id="@+id/tvTaskCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvTaskPriority"
        android:layout_below="@+id/tvTaskTitle"
        android:textStyle="italic"
        android:textSize="13dp"/>

    <TextView
        android:id="@+id/tvTaskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@id/tvTaskCategory"
        android:layout_toRightOf="@+id/tvTaskPriority"/>

    <TextView
        android:id="@+id/tvTaskPriority"
        android:layout_width="7dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvTaskDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />


</RelativeLayout>